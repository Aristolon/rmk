{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "rmk-test",
            "type": "process",
            "command": "cargo",
            "args": [
                "expand"
            //     "test",
            //     "--package",
            //     "rmk-test",
            //     "--bin",
            //     "rmk-test",
            //     "--",
            //     "tests::test_main",
            //     "--exact",
            //     "--nocapture"
            ],
            // "problemMatcher": [
            //     "$rustc"
            // ],
            "options": {
                "cwd": "${workspaceFolder}/boards/stm32h7"
            },
            "group": {
                "kind": "test",
                "isDefault": true,
            }, 
        },
        {
            "label": "build stm32h7 --debug",
            "type": "process",
            "command": "cargo",
            "args": [
                "size",
                "-j",
                "32"
            ],
            "options": {
                "cwd": "${workspaceFolder}/boards/stm32h7"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
            },
        },
        {
            "label": "build rp2040 --debug",
            "type": "process",
            "command": "cargo",
            "args": [
                "size",
                "-j",
                "32"
            ],
            "options": {
                "cwd": "${workspaceFolder}/boards/rp2040"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
            },
        },
                {
            "label": "build stm32h7 --release",
            "type": "process",
            "command": "cargo",
            "args": [
                "size",
                "--release",
                "-j",
                "32"
            ],
            "options": {
                "cwd": "${workspaceFolder}/boards/stm32h7"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
            },
        },
        {
            "label": "build rp2040 --release",
            "type": "process",
            "command": "cargo",
            "args": [
                "size",
                "--release",
                "-j",
                "32"
            ],
            "options": {
                "cwd": "${workspaceFolder}/boards/rp2040"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
            },
        },
        {
            "label": "flash stm32h7",
            "group": "build",
            "type": "shell",
            "command": "openocd -f \"${workspaceFolder}/boards/stm32h7/openocd.cfg\" -c \"program boards/stm32h7/target/thumbv7em-none-eabihf/debug/rmk-stm32h7 preverify verify reset exit\"",
            "dependsOn": [
                "build stm32h7 --debug"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "flash rp2040",
            "group": "build",
            "type": "shell",
            "command": "openocd -f \"${workspaceFolder}/boards/rp2040/openocd.cfg\" -c \"program boards/rp2040/target/thumbv6m-none-eabi/debug/rmk-rp2040 preverify verify reset exit\"",
            "dependsOn": [
                "build rp2040 --debug"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "objcopy",
            "type": "shell",
            "command": "cargo objcopy --release -- -O binary \"${workspaceFolder}/boards/${input:targetChip}/target/release/rmk-${input:targetChip}.bin\" && cargo size -j 32 --release",
            "options": {
                "cwd": "${workspaceFolder}/boards/${input:targetChip}"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
            },
        },
    ],
    "inputs": [
        {
            "id": "targetChip",
            "type": "pickString",
            "description": "Choose a chip in `boards` folder to build or flash",
            "options": [
                "rp2040",
                "stm32h7"
            ],
            "default": "stm32h7"
        }
    ]
}