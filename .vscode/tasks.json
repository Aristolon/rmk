{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Cargo Build (debug)",
            "type": "process",
            "command": "cargo",
            "args": ["build"],
            "options": {
              "cwd": "${workspaceFolder}/boards/${input:targetChip}"  
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Cargo Build (release)",
            "type": "process",
            "command": "cargo",
            "args": ["build", "--release"],
            "options": {
                "cwd": "${workspaceFolder}/boards/${input:targetChip}"  
              },
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "Cargo Clean",
            "type": "process",
            "command": "cargo",
            "args": ["clean"],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "flash stm32",
            "group": "build",
            "type": "shell",
            "command": "openocd -f ${workspaceFolder}/boards/stm32h7/openocd.cfg -c \"program target/thumbv7em-none-eabihf/debug/rmk-stm32h7 preverify verify reset exit\"",
            "dependsOn": [
                "Cargo Build (debug)"
            ],
            "dependsOrder": "sequence"
        },
    ],
    "inputs": [
        {
          "id": "targetChip",
          "type": "pickString",
          "description": "Choose a chip in `boards` folder to build or flash",
          "options": [
            "rp2040",
            "stm32h7"
          ],
          "default": "rp2040"
        }
      ]
}
