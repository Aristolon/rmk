{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "objcopy rmk-stm32h7 --bin --release",
            "type": "process",
            "command": "cargo",
            "args": [
                "objcopy",
                "--release",
                "-j",
                "32",
                "--",
                "-O",
                "binary",
                "${workspaceFolder}/target/thumbv7em-none-eabihf/release/rmk-stm32h7.bin"
            ],
            "options": {
                "cwd": "${workspaceFolder}/boards/stm32h7"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
            },
        },
        {
            "label": "objcopy rmk-rp2040 --bin --release",
            "type": "process",
            "command": "cargo",
            "args": [
                "objcopy",
                "--release",
                "-j",
                "32",
                "--",
                "-O",
                "binary",
                "${workspaceFolder}/target/thumbv6m-none-eabi/release/rmk-rp2040.bin"
            ],
            "options": {
                "cwd": "${workspaceFolder}/boards/rp2040"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
            },
        },
        {
            "label": "Build Debug",
            "type": "process",
            "command": "cargo",
            "args": [
                "size",
                "-j",
                "32"
            ],
            "options": {
                "cwd": "${workspaceFolder}/boards/${input:targetChip}"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Build Release",
            "type": "process",
            "command": "cargo",
            "args": [
                "size",
                "-j",
                "32",
                "--release"
            ],
            "options": {
                "cwd": "${workspaceFolder}/boards/${input:targetChip}"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Flash stm32h7",
            "group": "build",
            "type": "shell",
            "command": "openocd -f ${workspaceFolder}/boards/stm32h7/openocd.cfg -c \"program target/thumbv7em-none-eabihf/debug/rmk-stm32h7 preverify verify reset exit\"",
            "dependsOn": [
                "Build Debug"
            ],
            "dependsOrder": "sequence"
        },
    ],
    "inputs": [
        {
            "id": "targetChip",
            "type": "pickString",
            "description": "Choose a chip in `boards` folder to build or flash",
            "options": [
                "rp2040",
                "stm32h7"
            ],
            "default": "stm32h7"
        }
    ]
}